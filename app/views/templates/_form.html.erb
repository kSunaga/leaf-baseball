<div class="form">
  <ul>
    <li class="form-group">
      <%= f.label t 'templates.common.title' %>
      <%= f.text_field :title, {class: 'form-control'} %>
    </li>
    <li class="form-group">
      <%= f.label t 'templates.common.name' %>
      <%= f.text_field :name, {class: 'form-control'} %>
    </li>
    <li class="form-group">
      <%= f.label t 'templates.common.email' %>
      <%= f.email_field :email, {class: 'form-control'} %>
    </li>
    <li class="form-group">
      <%= f.label t 'templates.common.content' %>
      <%= f.text_field :content, {class: 'form-control'} %>
    </li>
    <%= link_to '戻る', :back, class: 'btn btn-primary' %>
      <% if type == 'edit' %>
      <span><%= f.submit '更新', {class: 'btn btn-primary'} %></span>
      <span><%= link_to '削除', template_path(@template), {class: 'btn btn-primary', method: :delete, data: {confirm: '本当に削除しますか？'}} %></span>
      <% else %>
        <span><%= f.submit '作成', {class: 'btn btn-primary'} %></span>
      <% end %>
  </ul>
</div>
