<div class="form">
  <ul>
    <li class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>
    <li class="form-group">
      <%= f.label :place %>
      <%= f.text_field :place %>
    </li>
    <li class="form-group">
      <%= f.label :level %>
      <%= f.text_field :level %>
    </li>
    <li class="form-group">
      <%= f.label :game_start_date %>
      <%= f.datetime_select :game_start_date, use_month_numbers: true, start_year: Time.now.year, end_year: Time.now.year + 1, minute_step: 15 %>
    </li>
    <li class="form-group">
      <%= f.label :game_end_date %>
      <%= f.datetime_select :game_end_date, use_month_numbers: true, start_year: Time.now.year, end_year: Time.now.year + 1, minute_step: 15 %>
    </li>
    <li class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </li>
    <li class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
    <li class="form-group">
      <%= f.label '確認用password' %>
      <%= f.password_field :confirm_password %>
    </li>
    <%= link_to '戻る', :back, class: 'btn btn-primary' %>
    <% if type == 'edit' %>
      <span><%= f.submit '更新', {class: 'btn btn-primary'} %></span>
      <span><%= link_to '削除', board_path(@board), {class: 'btn btn-primary', method: :delete, data: {confirm: '本当に削除しますか？'}} %></span>
    <% else %>
      <span><%= f.submit '作成', {class: 'btn btn-primary'} %></span>
    <% end %>
  </ul>
</div>
