<h1>募集一覧</h1>

<div id="top-page">
  <% @boards.each do |b| %>
    <div class="board">
      <%= link_to board_path(b) do %>
        <div class="content">
          <div class="item">
            <div class="head">
              <span>試合開始日時</span>
            </div>
            <div class="data">
              <span><%= b.format_start_date %></span>
            </div>
          </div>
          <div class="item">
            <div class="head">
              <span>レベル</span>
            </div>
            <div class="data">
              <span><%= b.level %></span>
            </div>
          </div>
          <div class="item">
            <div class="head">
              <span>担当者</span>
            </div>
            <div class="data">
              <span><%= b.name %></span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
