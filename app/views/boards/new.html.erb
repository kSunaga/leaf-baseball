<%= form_with model: @board, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, { class: 'col-xs-1'} %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :place, { class: 'col-xs-1'} %>
    <%= f.text_field :place %>
  </div>
  <div class="form-group">
    <%= f.label :level, { class: 'col-xs-1'} %>
    <%= f.text_field :level %>
  </div>
  <div class="form-group">
    <%= f.label :game_date %>
    <%= f.text_field :game_date %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <%= f.submit '作成', { class: 'btn btn-primary' } %>
<% end %>
